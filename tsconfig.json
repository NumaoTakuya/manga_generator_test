{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/index.js",
    "src/components/Bubble.tsx",
    "src/components/Tail.js",
    "src/pages/panel.js",
    "src/utils/hooks/useDetectFace.js",
    "src/utils/classes/CenteredRect.js",
    "src/utils/useMouseCenteredRect.js"
  ],
  "exclude": ["node_modules"]
}
